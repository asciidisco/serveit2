{
  "name": "serveit2",
  "version": "1.2.0",
  "description": "Quick and dirty static HTTP2 server",
  "main": "index.js",
  "bin": "./cli.js",
  "preferglobal": true,
  "author": "Sebastian Golasch <public@asciidisco.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/asciidisco/serveit2.git"
  },
  "scripts": {
    "test": "tape test.js",
    "cover": "istanbul cover tape -- test.js",
    "lint": "eslint *.js",
    "styleguide": "jscs *.js",
    "ci": "npm run styleguide && npm run lint && npm test"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm run styleguide",
      "commit-msg": "validate-commit-msg $1",
      "pre-push": "npm test",
      "post-merge": "npm install",
      "post-rewrite": "npm install"
    }
  },
  "dependencies": {
    "ecstatic": "^1.3.1",
    "meow": "^3.6.0",
    "mime": "^1.3.4",
    "morgan": "^1.6.1",
    "spdy": "^3.0.0",
    "spdy-keys": "0.0.0"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "^0.1.1",
    "eslint": "^1.9.0",
    "ghooks": "^1.0.0",
    "istanbul": "^0.4.0",
    "jscs": "^2.6.0",
    "tape": "^4.2.2",
    "validate-commit-message": "^3.0.1"
  }
}
